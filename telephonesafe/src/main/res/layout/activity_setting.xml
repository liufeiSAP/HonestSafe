<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhenquan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="设置中心" />

    <com.zhenquan.telephonesafe.view.SettingItemView
        android:id="@+id/siv_autoUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        zhenquan:title="自动更新"
        zhenquan:bg_type="first"
        android:layout_marginTop="15dp"
        >
        </com.zhenquan.telephonesafe.view.SettingItemView>
        
     <com.zhenquan.telephonesafe.view.SettingItemView
        android:layout_width="wrap_content"
        android:id="@+id/siv_localstyle"
        android:layout_height="wrap_content"
        zhenquan:title="归属地显示风格"
         zhenquan:bg_type="middle"
        >
        </com.zhenquan.telephonesafe.view.SettingItemView>
        
      <com.zhenquan.telephonesafe.view.SettingItemView
        android:layout_width="wrap_content"
        android:id="@+id/siv_localstyle_set"
        android:layout_height="wrap_content"
        zhenquan:title="归属地风格显示设置"
         zhenquan:enable="false"
         zhenquan:bg_type="last"
        >
        </com.zhenquan.telephonesafe.view.SettingItemView>
</LinearLayout>